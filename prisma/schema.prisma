generator client {
  provider = "prisma-client-js"
  output   = "../src/@types/prisma"
}

datasource db {
  provider = "postgresql"
}

enum USER_ROLE {
  ADIMIN
  DEFAULT
}

model Usuario {
  id       Int @id @default(autoincrement())
  publicId String @unique @map("public_id") @default(uuid())

  name     String
  email    String @unique
  passwordHash String @map("password_hash")
  photo    String @default("")
  posts    Post[]

  role     USER_ROLE @default(DEFAULT)

  @@map("usuario")
}

model Post {
  id       Int @id @default(autoincrement())
  publicId String @unique @map("public_id") @default(uuid())

  titulo   String
  Conteudo String
  
  autorId      Int    @map("autor_id")
  autor        Usuario @relation(fields: [autorId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  @@map("post")
}